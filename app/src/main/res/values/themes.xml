    </style>

    <style name="TituloEstadisticasStyle">
        <item name="android:textColor">#BB20CC</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResultadoEstadisticasStyle">
        <item name="android:textColor">@color/grisOscuro</item>
        <item name="android:background">#E49CF2</item>
        <item name="android:gravity">center</item>
    </style>



</resources>