<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ElSol" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ElSol" parent="Base.Theme.ElSol" />

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!-- Color de fondo -->
        <item name="android:popupBackground">#303030</item>
        <!-- Color del texto -->
        <item name="android:textColor">#FFFFFF</item>
